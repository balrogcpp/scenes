material Examples/LightRibbonTrail
{
	technique
	{
		pass
		{
			lighting off
			scene_blend add
			depth_write off
			diffuse vertexcolour

			texture_unit Albedo
			{
				texture ribbonband.dds 1d
				tex_address_mode clamp
				filtering none
			}

            rtshader_system {}
		}
	}
}