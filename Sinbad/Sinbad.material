import PbrBasic from pbr-basic.material
import PbrBasicShadow from pbr-basic.material

material Sinbad/Body : PbrBasicShadow
{
	receive_shadows on
	technique
	{
		pass
		{
			texture_unit Albedo
			{
				texture sinbad_body.dds
			}

            //rtshader_system {}
		}
	}
}

